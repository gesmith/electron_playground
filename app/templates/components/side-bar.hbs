<div class="container">
  <div class="row">
    <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
      <ul class="nav nav-pills flex-column">
        {{#each model as |file|}}
          {{#if file.isDirectory }}
          <li class="nav-item">
            <a class="nav-link" href="#">{{file.base}} <span class="sr-only">(current)</span></a>
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </nav>
  </div>
</div>

