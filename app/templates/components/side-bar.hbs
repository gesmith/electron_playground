<div class="container">
  <div class="row">
    <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
      <ul class="nav nav-pills flex-column">
        {{#each model as |file|}}
          {{#if file.isDirectory }}
          <li class="nav-item">
            {{#link-to "files" file.filePath class="nav-link"}}{{file.base}}{{/link-to}}
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </nav>
  </div>
</div>

